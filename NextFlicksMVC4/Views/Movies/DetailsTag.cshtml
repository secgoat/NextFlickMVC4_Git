        <div class="display-label">
            @Html.DisplayNameFor(model => model.movie.current_season)
        </div>
        <div class="display-field">
            @Html.DisplayFor(model => model.movie.current_season)
        </div>

        <div class="display-label">
            @Html.DisplayNameFor(model => model.movie.is_movie)
        </div>
        <div class="display-field">
            @Html.DisplayFor(model => model.movie.is_movie)
        </div>

        <div class="display-label">
            @Html.DisplayNameFor(model => model.movie.maturity_rating)
        </div>
      <div class="display-field">
          @Html.DisplayFor(model => model.movie.maturity_rating)
      </div>
      <div class="display-label">
          @Html.DisplayNameFor(model => model.genre_strings)
      </div>
      <div class="display-field">
          @Html.DisplayFor(model => model.genre_strings)
      </div>

      <div class="display-label">
          @Html.DisplayNameFor(model => model.Tags)
      </div>
      @foreach (MovieTags tag in Model.Tags)
      {
          <p class="tooltip" id="@tag.TagId" title="tooltip Test" style="background-color: #ffffff; width: auto" > @tag.Tag </p>
      }
        @*<div class="display-field"> @Html.DisplayFor(model => model.Tags)</div>*@
        <div class="display-field">
            @if (Roles.IsUserInRole("User") || Roles.IsUserInRole("Admin"))
            {
                 <h6>Seperate tags by comma</h6>
                <p>
                    @Html.TextBox("tags", value:"") @Html.CheckBoxFor(model => model.Anon)Anonymous?
                </p>
                <p><input type="submit" value="Add Tags" /></p>
            }
            
        </div>
        
    </fieldset>
}
