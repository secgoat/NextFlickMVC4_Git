@{
    ViewBag.Title = "Details";
   
}

<h2>Details</h2>

@using (Html.BeginForm())
{
  <fieldset>
        <legend>Movie</legend>
        @Html.HiddenFor(model => model.movie.movie_ID)
        <div class="display-label">
            @Html.DisplayNameFor(model => model.movie.short_title)
        </div>
        <div class="display-field">
            @Html.DisplayFor(model => model.movie.short_title)
        </div>

        <div class="display-label">
            @Html.DisplayNameFor(model => model.movie.year)
        </div>
        <div class="display-field">
            @Html.DisplayFor(model => model.movie.year)
        </div>

        <div class="display-label">
            @Html.DisplayNameFor(model => model.movie.runtime)
        </div>
        <div class="display-field">
            @Html.DisplayFor(model => model.movie.runtime)
        </div>

        <div class="display-label">
            @Html.DisplayNameFor(model => model.movie.avg_rating)
        </div>
        <div class="display-field">
            @Html.DisplayFor(model => model.movie.avg_rating)
        </div>

        <div class="display-label">
            @Html.DisplayNameFor(model => model.movie.tv_rating)
        </div>
        <div class="display-field">
            @Html.DisplayFor(model => model.movie.tv_rating)
        </div>

        <div class="display-label">
            @Html.DisplayNameFor(model => model.movie.web_page)
        </div>
        <div class="display-field">
            @Html.DisplayFor(model => model.movie.web_page)
