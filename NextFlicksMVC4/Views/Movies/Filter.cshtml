@using (Html.BeginForm("Year", "Movies"))
{
    @Html.ValidationSummary(true)

    <fieldset>
        <div class="editor-label">
            @Html.Label("Starting Year")
        </div>
        <div class="editor-field">
            @Html.DropDownList("year_start",(SelectList)ViewBag.years)
        </div>
        <div class="editor-label">
            @Html.Label("Ending Year")
        </div>
        <div class="editor-field">
            @Html.DropDownList("year_end", (SelectList)ViewBag.years)
        </div>
        <div class="editor-label">
            @Html.Label("Start index")
        </div>
        <div class="editor-field">
            @Html.TextBox("start", "0" )
        </div>
        <div class="editor-label">
            @Html.Label("Limit per page")
        </div>
        <div class="editor-field">
            @Html.TextBox("count", "25")
        </div>

    </fieldset>
    <input type="submit" value="Filter" />}