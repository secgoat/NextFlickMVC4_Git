<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8" />
        <title>@ViewBag.Title - Movie App</title>
        <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
        <meta name="viewport" content="width=device-width" />
        
        @Styles.Render("~/Content/css")
        @Scripts.Render("~/bundles/modernizr")
        @Scripts.Render("~/bundles/jquery")
        
        <!-- This is for jquery-ui -->
        @Scripts.Render("~/bundles/jqueryui")
        @Styles.Render("~/Content/themes/base/jquery-ui.css")
        @*<link rel="stylesheet" href="http://code.jquery.com/ui/1.9.2/themes/base/jquery-ui.css" />*@
        
        

        
    </head>
    <body>
        <header>
            <div class="content-wrapper">
                <div class="float-left">
                    <p class="site-title">@Html.ActionLink("We Are The Watchers.com", "Index", "Movies")</p>
                </div>
                <div class="float-right">
                  @*  <section id="login">
                        @Html.Partial("_LoginPartial")
                    </section>*@
                    <nav>
                        <ul id="menu">
                            <li>@Html.ActionLink("Movies", "oldIndex", "Movies")</li>
                            <li>@Html.ActionLink("About", "About", "Home")</li>
                            @*<li>@Html.ActionLink("Contact", "Contact", "Home")</li>*@        
                    <li>@Html.ActionLink("Filter", "Filter", "Movies")</li>
                        </ul>
                    </nav>
                </div>
            </div>
        </header>

        <div id="body">
            @RenderSection("featured", required: false)
            <section class="content-wrapper main-content clear-fix">
                @RenderBody()
            </section>
        </div>
        <footer>
            <div class="content-wrapper">
                <div class="float-left">
                    <p>&copy; @DateTime.Now.Year - WeAreTheWatcher.com</p>
                </div>
                
            </div>
            <div class="content-wrapper">
                <div class ="float-right">
                    <p>@Html.ActionLink("Login","Index","User")</p>
                </div>
            </div>
        </footer>

@*        @Scripts.Render("~/bundles/jquery")
*@        @RenderSection("scripts", required: false)
    </body>
</html>
