    <script type="text/javascript">
        $(document).ready(function () {
            /* dict to store img locations for selection img*/
            var dict = {
                "title": '<img class="menuImg" src="../../Content/Images/MenuItems/DefaultMenuIcon.png" />',
                "genre": '<img class="menuImg" src="../../Content/Images/MenuItems/DefaultMenuIcon.png" />',
                "tag": '<img class="menuImg" src="../../Content/Images/MenuItems/TagMenuIcon.png" />',
                "rt": '<img class="menuImg" src="../../Content/Images/MenuItems/RTMenuIcon.png" />',
                "rating": '<img class="menuImg" src="../../Content/Images/MenuItems/RatingsMenuIcon.PNG" />',
                "year": '<img class="menuImg" src="../../Content/Images/MenuItems/YearMenuIcon.png" />',
                "stars": '<img class="menuImg" src="../../Content/Images/MenuItems/NetflixStarMenuIcon.png" />'
            };

            createDropDown();

            $(".dropdown dt a").click(function () {
                $(".dropdown dd ul").toggle();
            });

            $(document).bind('click', function (e) {
                var $clicked = $(e.target);
                if (!$clicked.parents().hasClass("dropdown"))
                    $(".dropdown dd ul").hide();
            });

            $(".dropdown dd ul li a").click(function () {
                var text = $(this).html();
                var classString = $(this).attr("class").toString(); //get the class of the menu itme clicked
                var imgString = dict[classString]; // feed that class as a string into the dictionary to egt the correct <img>
                $(".dropdown dt a").html(imgString + text); //append the imag text before the rest
                $(".dropdown dd ul").hide();

                var source = $("#source");
                source.val($(this).find("span.value").html())
               /* var dirp = $(this).attr("class");
                $(" .dropdown dt a").attr("class", dirp); */
            });

        });
        
        function createDropDown(){
            var source = $("#source");
            var selected = source.find("option[selected]");
            var options = $("option", source);
            var headerSearch = document.getElementById("pseudo-select");


            $(headerSearch).append('<dl id="target" class="dropdown"></dl>')
            $("#target").append('<dt id="choice"><a href="#">' + selected.text() + 
                '<span class="value">' + selected.val() + 
                '</span></a></dt>')
            $("#target").append('<dd><ul></ul></dd>')

            options.each(function () {
             /*   var classString = $(this).attr("class").toString(); //get the class of the menu itme clicked
                var imgString = dict[classString]; // feed that class as a string into the dictionary to egt the correct <img> */

                $("#target dd ul").append('<li><a href="#" class="' + $(this).val() + '">' +  
                    $(this).text() + '<span class="value">' +
                    $(this).val() + '</span></a></li>');
            });
        }
    </script>

